---
import "../styles/index.scss";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" type="image/svg+xml" href="/logo-icon-48.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<meta name="author" content="Alex Martínez Martínez" />
		<meta
			name="description"
			content="Official website of Alex Martínez Martínez"
		/>
		<meta itemprop="name" content="Alex Martínez Martínez" />
		<meta property="og:title" content="Alex Martínez Martínez" />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@almtav08" />
		<meta name="twitter:creator" content="@almtav08" />
		<meta property="og:image:type" content="image/jpg" />
		<meta property="og:image:width" content="1024" />
		<meta property="og:image:height" content="1024" />
		<meta property="og:image:alt" content="Alex Martínez Martínez" />
		<meta property="og:image" content="/logo-icon.jpg" />
		<meta name="twitter:image:type" content="image/jpg" />
		<meta name="twitter:image" content="/logo-icon.jpg" />
		<meta name="twitter:image:alt" content="Alex Martínez Martínez" />
		<meta name="twitter:title" content="Alex Martínez Martínez" />
		<meta
			name="twitter:description"
			content="Official website of Alex Martínez Martínez"
		/>
		<meta property="og:url" content="https://almtav08.github.io" />
		<meta
			property="og:description"
			content="Official website of Alex Martínez Martínez"
		/>
		<script src="../scripts/theme.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
