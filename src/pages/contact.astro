---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";

const contacts = await Astro.glob("../content/contact/*.md");
const address = contacts[0].frontmatter.address;
---

<Layout title="Alex Martínez Martínez">
	<Navbar active="contact" />
	<section class="section flex">
		<div class="contact flex page">
			<form
				class="contact-form flex"
			>
				<div class="inputs-area flex">
					<div class="form-group">
						<input
							type="text"
							id="email"
							name="email"
							class="form-control"
							placeholder=" "
							autocomplete="on"
						/>
						<label for="email" class="label">Email</label>
					</div>
					<div class="form-group">
							<input
								type="text"
								id="subject"
								name="subject"
								class="form-control"
								placeholder=" "
							/>
						<label for="subject" class="label">Subject</label>
					</div>
					<div class="form-group">
							<textarea
								name="body"
								id="message"
								class="form-control"
								rows="6"
								maxlength="3000"
								placeholder=" "></textarea>
						<label for="message" class="label">Message</label>
					</div>
				</div>
				<div class="form-group flex">
					<button type="submit" id="submit">Send Message</button>
				</div>
			</form>
			 or
			<div class="contact-buttons flex">
