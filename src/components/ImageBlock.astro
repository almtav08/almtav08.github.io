---
// src/components/ImageBlock.astro
const { title, image, align } = Astro.props;
---

<div class='w-full md:w-1/2 flex flex-col'>
  <div class='flex px-4 py-2 gap-4 w-fit h-fit bg-gray-900 rounded-t-lg'>
    <div class='w-fit h-fit flex justify-center items-center gap-2'>
      <span class='bg-red-500 inline-block center w-3 h-3 rounded-full'></span>
      <span class='bg-yellow-500 inline-block center w-3 h-3 rounded-full'
      ></span>
      <span class='bg-green-500 inline-block center w-3 h-3 rounded-full'
      ></span>
    </div>
    <div class='w-fit h-3 flex justify-center items-center not-selectable'>
      {title}
    </div>
  </div>
  <div
    class='bg-gray-900 w-full h-72 rounded-r-lg rounded-b-lg relative overflow-hidden'>
    <img
      alt={`Imagen del proyecto ${title}`}
      class={`object-cover object-${align} w-full h-72 sm:h-full`}
      loading='lazy'
      src={image}
    />
  </div>
</div>
